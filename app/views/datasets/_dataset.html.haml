.card.mb-3
  %h4.card-header
    %i.bi.bi-database-fill
    = metadatum.title
    %span.text-muted.small= "- #{metadatum.topics.join(',')}"

  .card-body
    %p= metadatum.description
    %p
      %strong Published:
      = metadatum.publicationDate

    - metadatum.keywords.each do |tag|
      %span.badge.bg-secondary= tag

  .card-footer.d-flex.justify-content-between.align-items-center
    = link_to "View", dataset_path(metadatum), class: "btn btn-primary" 
    .text-muted.small Last Updated: #{metadatum.updated_at}
