.card.p-4.mb-4
  %h1 Data Explorer
  %p Subtitle

.row.g-3.mb-3
  .col-lg-3
    = render 'filters'

  .col-lg-9
    = form_with url: search_datasets_path, method: :get do |f|
      .row.justify-content-between.align-items-end.mb-3
        .col-md-4
          .input-group.input-group-lg 
            %span.input-group-text 
              Order By
            = f.select :order, options_for_select([['Most Relevant', 'relevance'], ['Newest', 'newest'], ['Oldest', 'oldest']], @search[:order]), {}, class: 'form-control', id: 'order'

        .col
          .input-group.input-group-lg  
            %span.input-group-text 
              Search
            = f.text_field :search, value: @search[:search], class: 'form-control', placeholder: 'Search Keywords, Datasets...'
            = f.submit 'Search', class: 'btn btn-secondary'

    = render partial: 'dataset', collection: @metadata, as: :metadatum
