- chart_title = "#{@grid.name.titleize} Capacity by Fuel Type (#{year})"
- chart_options = Chartkick.options.deep_merge({ title: chart_title,
    suffix: ' MW',
    donut: true,
    library: { plugins: { legend: { title: { display: true, text: 'Fuel Type'} } } },
    download: { filename: chart_title.parameterize}})

#capacity-chart.responsive-fuel-chart{ data: { controller: 'fuel-chart', fuel_chart:{
    url_value: capacity_yearly_grid_charts_path(@grid),
    chart_type_value: 'pie',
    options_value: chart_options.to_json
}}}
