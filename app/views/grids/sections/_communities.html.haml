- cols = @grid.communities.in_groups(4, false)
%div{
  data: {
    controller: "maps-bridge",
    "maps-bridge-default-layer-url-value": community_locations_grid_maps_path(@grid, format: :json)
  }
}
  #communities.anchor-offset{ data: { "maps-bridge-target": "trigger" } }

.container.mb-3.my-5.mx-3.mx-md-5.mt-3
  .row.g-3
    %p
      The
      %strong= @grid.name
      = " serves #{pluralize(@grid.communities.size, 'community')}:"
  .row.g-3
    - cols.each do |group|
      .col-12.col-md-3
        %ul.list-group.list-group-flush.small
          - group.each do |c|
            %li.list-group-item.py-2
              = link_to c.name, community_path(c), class: "text-decoration-none stretched-link"