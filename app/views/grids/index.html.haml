- content_for :title, "Explore Grids"

.container-xl.mt-4
  .row.justify-content-center.mb-5
    .col
      #grids-hero.position-relative.text-center.rounded-4.p-0.p-md-3.p-lg-5
        .container-fluid
          .row.justify-content-center
            .col-12.col-md-11.col-lg-10.bg-white.bg-opacity-75.p-4.rounded-4.shadow
              %h1.fw-bold.m-3
                %i.bi.bi-grid.me-2
                Explore Grids

              %p.lead.fs-5.w-75.mx-auto.mb-4
                Explore grid-level insights, from communities served to energy metrics.

              -# --- BUTTONS SECTION ---
              .d-flex.flex-column.flex-sm-row.justify-content-center.align-items-center.gap-3.mb-4
                = link_to "#{Community.count} Communities", communities_path, class: "btn btn-lg btn-aedg-primary"
                = link_to "Datasets", search_metadata_path, class: "btn btn-lg btn-aedg-secondary"

      -# Photo Credit
      .text-end.text-small.text-muted.mt-2
        Photo Credit: Gwen Holdmann

-# Main Content / Results Section
- if @grids.blank?
  .text-center.mt-5
    %i.bi.bi-search.display-4.text-muted.mb-3
    %p.lead.text-secondary No grids found matching your search.

- else
  .row.justify-content-center.g-5.mb-5.mx-0
    .col-xl-8.mt-0
      = turbo_frame_tag 'grids' do
        .row.g-2
          - @grids.each do |grid|
            .col-6.col-sm-4.col-ls-2
              = link_to grid.name, grid_path(grid),
                class: "btn btn-light border w-100 h-100 shadow-sm d-flex align-items-center justify-content-center text-wrap",
                data: { turbo_frame: '_top' }
