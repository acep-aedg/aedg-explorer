%div{ data: { controller: "community-dropdown", action: "change->community-dropdown#update" } }
  - community_array = @communities.map { |community| [community.name, url_for(community)] }
  = select_tag(:community, options_for_select(community_array, url_for(current_community) || ""), { prompt: '-- Select a Community --',  data: { community_dropdown_target: "select" } })