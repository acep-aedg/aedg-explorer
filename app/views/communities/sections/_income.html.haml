.my-5.mx-3.mx-md-5.mt-3
  .d-flex.align-items-center.mb-3
    %i.bi.bi-house-fill.me-2.fs-4
    %h4#household-income.mb-0.me-3.py-3 Household Income
    %hr.flex-grow-1.mt-1.mb-0
  .mb-3
    / Tabs
    .d-flex.align-items-center.mt-4
      .nav.nav-tabs
        %li.nav-item
          = link_to "#household-income-chart-wrapper", class: "nav-link active", data: { bs_toggle: "tab" } do
            %i.bi.bi-bar-chart-fill.me-1
            Household Income Chart
        %li.nav-item
          = link_to "#household-income-data-wrapper", class: "nav-link", data: { bs_toggle: "tab" } do
            %i.bi.bi-table.me-1
            Household Income Data
  
    / Tab Content
    .tab-content.mt-3
      #household-income-chart-wrapper.tab-pane.fade.show.active
        = render 'communities/sections/income/household_income/household_income_chart'
      #household-income-data-wrapper.tab-pane.fade
        = render 'communities/sections/income/household_income/household_income_data'