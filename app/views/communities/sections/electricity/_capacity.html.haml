- stats = Capacity.capacity_stats_for(@community.grid)

.d-flex.align-items-center.mb-3
  %i.bi.bi-lightning-fill.me-2.fs-4
  %h4#capacity.mb-0.me-3.py-3 Capacity
  %hr.flex-grow-1.mt-1.mb-0
.mb-3
  = render 'communities/shared/grid_info'
  = render 'communities/sections/electricity/capacity/capacity_stats', stats: stats

  / Tabs
  .d-flex.align-items-center.mt-4
    .nav.nav-tabs
      %li.nav-item
        = link_to "Chart", "#chart", class: "nav-link active", data: { bs_toggle: "tab" }
      %li.nav-item
        = link_to "Data", "#data", class: "nav-link", data: { bs_toggle: "tab" }

  / Tab Content
  .tab-content.mt-3
    #chart.tab-pane.fade.show.active
      = render 'communities/sections/electricity/capacity/capacity_chart', year: stats[:year]
    #capacity-data.tab-pane.fade
      = render 'communities/sections/electricity/capacity/capacity_data', year: stats[:year]