.card
  %h4.card-header Production
  .card-body.p-3
    = render 'communities/shared/grid_info'
    
    .d-flex.justify-content-between.align-items-center
      .nav.nav-tabs
        - if @community.grid.monthly_generations.any?
          %li.nav-item
            = link_to "Monthly", "#monthly", class: "nav-link active", data: { bs_toggle: "tab" }
        %li.nav-item
          = link_to "Yearly", "#yearly", class: "nav-link", data: { bs_toggle: "tab" }

    .tab-content
      #monthly.tab-pane.fade.show.active
        = render "communities/sections/electricity/production/monthly"

      #yearly.tab-pane.fade