.d-flex.align-items-center.mb-3
  %i.bi.bi-building-gear.me-2.fs-4
  %h4#production.mb-0.me-3.py-3 Production
  %hr.flex-grow-1.mt-1.mb-0
.mb-3
  = render 'communities/shared/grid_info'
    
  .d-flex.justify-content-between.align-items-center
    .nav.nav-tabs
      - if show_monthly_generation?(@community)
        %li.nav-item
          = link_to "#monthly-prod-chart-wrapper", class: "nav-link active", data: { bs_toggle: "tab" } do
            %i.bi.bi-graph-up.me-1
            Monthly Chart
        %li.nav-item
          = link_to "#monthly-prod-data", class: "nav-link", data: { bs_toggle: "tab" } do
            %i.bi.bi-table.me-1
            Monthly Data
      - if show_yearly_generation?(@community)
        %li.nav-item
          = link_to "#yearly-prod-chart-wrapper", class: "nav-link", data: { bs_toggle: "tab" } do
            %i.bi.bi-pie-chart.me-1
            Yearly Chart
        %li.nav-item
          = link_to "#yearly-prod-data", class: "nav-link", data: { bs_toggle: "tab" } do
            %i.bi.bi-table.me-1
            Yearly Data


  .tab-content.mt-3
    - if show_monthly_generation?(@community)
      #monthly-prod-chart-wrapper.tab-pane.fade.show.active
        = render 'communities/sections/electricity/production/monthly_stats'
        = render "communities/sections/electricity/production/monthly_chart"

      #monthly-prod-data.tab-pane.fade
        = render "communities/sections/electricity/production/monthly_data"
    - if show_yearly_generation?(@community)
      #yearly-prod-chart-wrapper.tab-pane.fade
        = render "communities/sections/electricity/production/yearly_chart"

      #yearly-prod-data.tab-pane.fade
        = render "communities/sections/electricity/production/yearly_data"