  %i.bi.bi-cash-coin.me-2.fs-4
  %h4#sales.mb-0.me-3.py-3.anchor-offset Sales
  %hr.flex-grow-1.mt-1.mb-0

= render "communities/sections/electricity/sales/summary"
.mb-3
  .d-flex.justify-content-between.align-items-center
    .nav.nav-tabs
      %li.nav-item
        = link_to "#energy_sold", class: "nav-link active", data: { bs_toggle: "tab" } do
          %i.bi.bi-bar-chart-fill.me-1
          Energy Sold
      -# %li.nav-item
      -#   = link_to "#customer-breakdown", class: "nav-link", data: { bs_toggle: "tab" } do
