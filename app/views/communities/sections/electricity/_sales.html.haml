      %li.nav-item
        = link_to "#sales-data", class: "nav-link", data: { bs_toggle: "tab" } do
          %i.bi.bi-table.me-1
          Data


.tab-content
  #energy_sold.tab-pane.fade.show.active
    = render "communities/sections/electricity/sales/energy_sold"
