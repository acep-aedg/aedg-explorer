- content_for :quicknav do
  %ul.nav.flex-column
    %li.nav-item
      = link_to "Utility", "#utility", class: 'nav-link'
    %li.nav-item
      = link_to "Production", "#production", class: 'nav-link'
    %li.nav-item
      = link_to "Rates", "#rates", class: 'nav-link'

- if @community.grid&.monthly_generations&.exists? || @community.grid&.yearly_generations&.exists?
  .mb-3
    = render 'communities/sections/electricity/production'
- if @community.grid&.capacities&.exists?
  .mb-3
    = render 'communities/sections/electricity/grid_capacity'
- if @community.reporting_entity
  .mb-3
    = render 'communities/sections/electricity/utilities'

.row.g-3.row-cols-2
  - if @community.name
    .col= render 'communities/sections/electricity/rates', community: @community
  - if @community.name
    .col= render 'communities/sections/electricity/fuel', community: @community
  - if @community.name
    .col= render 'communities/sections/electricity/sales_revenue_customers', community: @community
