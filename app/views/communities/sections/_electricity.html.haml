- content_for :quicknav do
  %ul.nav.flex-column
    %li.nav-item
      = link_to "Utilities", "#utilities", class: 'nav-link'
    %li.nav-item
      = link_to "Production", "#production", class: 'nav-link'
    %li.nav-item
      = link_to "Rates", "#rates", class: 'nav-link'
- if @community.reporting_entity
  .m-5.mt-3
    = render 'communities/sections/electricity/utilities'
- if @community.electric_rates&.any? { |rate| rate.residential_rate || rate.commercial_rate || rate.industrial_rate }
  .m-5
    = render 'communities/sections/electricity/rates'
- if @community.grid&.monthly_generations&.exists? || @community.grid&.yearly_generations&.exists?
  .m-5
    = render 'communities/sections/electricity/production'
- if @community.grid&.capacities&.exists?
  .m-5
    = render 'communities/sections/electricity/capacity'
- if @community.reporting_entity&.sales&.exists?
  .m-5
    = render 'communities/sections/electricity/sales_revenue_customers'
