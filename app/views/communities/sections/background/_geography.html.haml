.d-flex.align-items-center.mb-3
  %i.bi.bi-globe.me-2.fs-4
  %h4#geography.mb-0.me-3.py-3.anchor-offset Geography
  %hr.flex-grow-1.mt-1.mb-0

.row
  %table.table.table-hover
    %tbody
      - if @community.name.present?
        %tr
          %th.pe-3 Community
          %td= @community.name
      - if @community.borough.present?
        - if @community.borough.census_area?
          %tr
            %th.pe-3 Borough
            %td None (in the Unorganized Borough)
          %tr
            %th.pe-3 Census Area
            %td= @community.borough.name
        - else
          %tr
            %th.pe-3 Borough
            %td= @community.borough.name
      - if @community.regional_corporation.present?
        %tr
          %th.pe-3 Regional Corporation
          %td= @community.regional_corporation.name

      - if @community.village_corporation.present?
        %tr
          %th.pe-3 Village Corporation
          %td= @community.village_corporation

      - if @community.grid.present?
        %tr
          %th.pe-3 Grid
          %td= link_to @community.grid.name.titleize, grid_path(@community.grid), class: "text-info"
          
      %tr
        %th.pe-3 Latitude, Longitude
        %td
          = @community.latitude
          ,
          = @community.longitude

      - if @community.show_school_districts?
        %tr
          %th.pe-3 School District(s)
          %td
            %ul.list-unstyled.mb-0
              - @community.school_districts.each do |d|
                %li.mb-2
                  %span= d.name
                  - if d.district_type.present?
                    %span.text-muted.mx-2= "(#{d.formatted_type})"
                  - unless d.is_active
                    %span.badge.bg-warning.text-dark.ms-2 Inactive
                  - if d.notes&.strip.present?
                    %div.text-muted.small.mt-1.ms-2= "Notes: #{d.notes}"
