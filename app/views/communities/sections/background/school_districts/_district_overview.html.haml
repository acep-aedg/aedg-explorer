.d-flex.align-items-center.mb-3
  %i.bi.bi-mortarboard.me-2.fs-4
  %h4#school-districts.mb-0.me-3.py-3 School Districts
  %hr.flex-grow-1.mt-1.mb-0

%ul.ms-3
  - @community.school_districts.each do |district|
    %li.mb-3
      %div
        %strong= district.name
        %span.text-muted.mx-2= "(#{district.district_type})"
        %span.badge.bg-warning.text-dark.ms-2= "Inactive" unless district.is_active
    %div.text-muted.small.ms-2.mt-1= "Notes: #{district.notes}" if district.notes&.strip.present?