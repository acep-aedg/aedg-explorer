- summary = Sale.latest_summary_for(@community.sales)

- if summary
  .row.g-3.mb-3
    -# CARD 1: ENERGY
    .col-12.col-md-6.col-lg-4
      .d-flex.h-100
        .d-flex.flex-grow-1.align-items-center.bg-body-secondary.rounded.p-3
          %i.bi.bi-lightning-fill.text-warning.fs-3.me-3
          .flex-grow-1
            .text-muted Total Energy Sold (#{summary.year})
            %p.fw-semibold.mb-0= number_with_delimiter(summary.total_sales) + " MWh"
    
    -# CARD 2: REVENUE
    .col-12.col-md-6.col-lg-4
      .d-flex.h-100
        .d-flex.flex-grow-1.align-items-center.bg-body-secondary.rounded.p-3
          %i.bi.bi-cash-coin.text-success.fs-3.me-3
          .flex-grow-1
            .text-muted Total Revenue (#{summary.year})
            %p.fw-semibold.mb-0= number_to_currency(summary.total_revenue, precision: 0)
    
    -# CARD 3: CUSTOMERS
    .col-12.col-md-6.col-lg-4
      .d-flex.h-100
        .d-flex.flex-grow-1.align-items-center.bg-body-secondary.rounded.p-3
          %i.bi.bi-people-fill.text-info.fs-3.me-3
          .flex-grow-1
            .text-muted Total Customers (#{summary.year})
            %p.fw-semibold.mb-0= number_with_delimiter(summary.total_customers)
      
  .mt-3.pt-2.d-flex.justify-content-end
    %small.text-muted
      %strong Reported by:
      %span.ms-1= summary.reporter_names