- parent_tab = "electric_rates_sales"

-# --- Section Header ---
= render 'shared/section_header',
  icon: 'coin',
  title: 'Rates',
  description: 'Residential, commercial, and industrial electric rate trends'

-# --- Section Body ---
.section-body.mx-md-5.mx-3
  .row
    .col-12
      -# Main Data Card
      .p-4.border.rounded-3.bg-white.shadow-sm.mb-4
        
        -# Historical Chart Section
        .mb-5
          .d-flex.align-items-center.mb-3
            %i.bi.bi-graph-up.me-2.text-primary
            %h6.mb-0.fw-bold Historical Rate Trends
          = render "communities/#{parent_tab}/rates/historical_rate_chart"
        
        -# Data Table Section
        .pt-4.border-top
          .d-flex.align-items-center.mb-3
            %i.bi.bi-table.me-2.text-primary
            %h6.mb-0.fw-bold Rate Data
          = render "communities/#{parent_tab}/rates/data"