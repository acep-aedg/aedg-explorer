- parent_tab = "fuel"

.d-flex.align-items-center.mb-3
  %i.bi.bi-coin.me-2.fs-4
  %h4.mb-0.me-3.py-3.anchor-offset Fuel Prices
  %hr.flex-grow-1.mt-1.mb-0

.mb-3
  .d-flex.justify-content-between.align-items-center
    .nav.nav-tabs
      %li.nav-item
        = link_to "#fuel-prices-chart", class: "nav-link active", data: { bs_toggle: "tab" } do
          %i.bi.bi-bar-chart-fill.me-1
          Fuel Price Chart
      %li.nav-item
        = link_to "#fuel-prices-data", class: "nav-link", data: { bs_toggle: "tab" } do
          %i.bi.bi-table.me-1
          Fuel Price Data

.tab-content
  #fuel-prices-chart.tab-pane.fade.show.active
    = render "communities/tabs/#{parent_tab}/fuel_prices/chart"
  #fuel-prices-data.tab-pane.fade
    = render "communities/tabs/#{parent_tab}/fuel_prices/datatable"
